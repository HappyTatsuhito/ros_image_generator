import os
import cv2
import numpy as np

def viewImage(image):
    cv2.namedWindow("Show Image")
    cv2.imshow("Show Image", image)
    input_key = cv2.waitKey(0)

if __name__ == '__main__':
    image_path = "/home/tatsuhito/invisible_marker_data/formal_dataset/0push/depth_imgs/depth_image_1.png"
    #image_path = "/home/tatsuhito/invisible_marker_data/formal_dataset/0push/rgb_imgs/color_image_1.png"

    image = cv2.imread(image_path)
    print image.shape
    print image.dtype
    print np.amax(image)
    print np.amin(image)
    viewImage(image*255)
    for i in range(720):
        print image[i][640:700]

    image = cv2.imread(image_path, cv2.IMREAD_GRAYSCALE)
    print image.shape
    print image.dtype
    print np.amax(image)
    print np.amin(image)
    viewImage(image*255)
